<MainWidgetCard>
    MDCard:
        orientation: 'horizontal'
        font: 'Roboto-ThinItalic'
        md_bg_color: .1,.1,.1,1
        size_hint: None, None
        size: '280dp', '80dp'
        pos_hint: {'center_x': .5}


        MDBoxLayout:
            orientation: 'vertical'
            padding_left: '.5dp'
            # line_color: 1, 0,0,1
            pos_hint: {'center_y': .55}
            MDLabel:
                text: 'Calories'
                font_size: 25
                halign: 'center'
                pos_hint: {'center_x': .35}

        MDFloatLayout:
            PiProgressBar:
                size_hint: None, None
                size: 80, 80
                pos_hint: {'center_x': .6, 'center_y': .5}
                value: 50