<PiProgressBar>
    canvas.before:
        Color:
            rgba: root.bar_color + [.3]
        Line:
            width: 2.5
            ellipse: (self.x, self.y, self.width, self.height, 0 ,360)

    canvas.after:
        Color:
            rgb: root.bar_color
        Line:
            width: 2.5
            ellipse: (self.x, self.y, self.width, self.height, 0, root.set_value * 3.6)


    MDLabel:
        text: root.text
        theme_text_color: "Custom"
        text_color: 222/255.0,176/255.0,46/255.0,1
        font_size: root.height * .25
        pos_hint: {'center_x': .5, 'center_y': .5}
        halign: 'center'